                    data: [668.9, 399.4, 205.4]
                }
            ]
        };
        dataRevenuesProfitChart = {
            labels: ['Improved Revenue', 'Faster-time-to-value', 'Trusted Experiences'],

            series: [
                {
                    name: 'X86',
                    data: [1512, 840, 186.4]
                }, {
