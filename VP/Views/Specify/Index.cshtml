                    data: [216, 997.5, 975]
                }
            ]
        };
        dataCostsChart = {
            labels: ['System Acquisition', 'Software Acquisition', 'Operations'],
            series: [
                {
                    name: 'X86',
                    data: [957, 1682.2, 546.1]
                }, {
                    name: 'Z14',
                    data: [668.9, 399.4, 205.4]
                }
            ]
        };
        dataRevenuesProfitChart = {
            labels: ['Improved Revenue', 'Faster-time-to-value', 'Trusted Experiences'],

            series: [
                {
                    name: 'X86',
                    data: [1512, 840, 186.4]
                }, {
                    name: 'Z14',
                    data: [1680, 1064, 207.2]
                }
            ]
        };
        dataRisksChart = {
            labels: ['End-to-End Security', 'Improved governance and compliance', 'Reduced downtime'],
            series: [
                {
                    name: 'X86',
                    data: [846.8, 801, 546.4]
                }, {
                    name: 'Z14',
                    data: [1004.5, 885, 764.9]
                }
            ]
        };
        dataRoiChart = {
            labels: ['X86', 'Z14'],
            series:
                [56, 363]
        };
        dataPaybackChart = {
            labels: ['X86', 'Z14'],
            series:
                [17.15, 5.88]
        };

        optionsChart = {
            chartPadding: {
                top: 30,
                right: 0,
                bottom: 20,
                left: 0
            },
            seriesBarDistance: 40,
            lineSmooth: Chartist.Interpolation.cardinal({
                tension: 0
            }),

            axisY: {
                labelInterpolationFnc: function (value) {
                    return '$' + value
                }, offset: 50
            }
            ,
            plugins: [
                Chartist.plugins.legend({
                    position: 'top'
                })
                ,
                Chartist.plugins.ctBarLabels()
            ]
        };

        optionsChartdistributed_ROI = {
            chartPadding: {
                top: 50,
                right: 0,
                bottom: 0,
                left: 0
            },
            seriesBarDistance: 50,
            lineSmooth: Chartist.Interpolation.cardinal({
                tension: 0
            }),
            distributeSeries: true,
            axisY: {
                labelInterpolationFnc: function (value) {
                    return value + '%'
                }, offset: 50
            }
            ,
            plugins: [
                Chartist.plugins.ctBarLabels_percentage()
            ]
        };
        optionsChartdistributed_PB = {
            chartPadding: {
                top: 50,
                right: 0,
                bottom: 0,
                left: 0
            },
            seriesBarDistance: 50,
            lineSmooth: Chartist.Interpolation.cardinal({
                tension: 0
            }),
            distributeSeries: true,
            axisY: {
                labelInterpolationFnc: function (value) {
                    return value
                }, offset: 50
            }
            ,
            plugins: [
                Chartist.plugins.ctBarLabels_null()
            ]
        };


        //var divProductivityChart =
        new Chartist.Bar('#divProductivityChart', dataProductivityChart, optionsChart);
