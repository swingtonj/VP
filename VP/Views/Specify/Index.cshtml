            series: [
                {
                    name: 'X86',
                    data: [846.8, 801, 546.4]
                }, {
                    name: 'Z14',
                    data: [1004.5, 885, 764.9]
                }
            ]
        };
        dataRoiChart = {
            labels: ['X86', 'Z14'],
            series:
                [56, 363]
        };
        dataPaybackChart = {
            labels: ['X86', 'Z14'],
            series:
                [17.15, 5.88]
        };

        optionsChart = {
            chartPadding: {
                top: 30,
                right: 0,
                bottom: 20,
                left: 0
            },
