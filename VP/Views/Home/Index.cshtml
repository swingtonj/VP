@model VP.Models.Login
@{
    ViewBag.Title = "Home Page";
}
<link href="~/Assets/css/style.css" rel="stylesheet" />
<link href="~/Assets/css/Login.css" rel="stylesheet" />
@*<link href="~/Assets/css/ionicons.min.css" rel="stylesheet" />*@
<div class="container">

    <div class="row align-middle" style="margin-top:60px;">
        <div class="col-lg-6 col-md-12 col-sm-12 section-header aligncontent-middle">
            <div class="mark-header">Accelerate and Amplify Value from Your Information Technology Solution</div>
            <div class="mark-text">
                Are you considering investing in Analytics solutions for your digital transformation? To help you build a business case for this journey, this Value Predictor quantifies the expected value from your investment using a model tailored for your industry and business objectives. A personalized report will help you assess how the IBM Z14 can help you accelerate and amplify value from your hardware investment compared to x86 systems.
            </div>
        </div>
        <div class="col-lg-2 col-md-12 col-sm-12"></div>
        <div class="col-lg-4 col-md-12 col-sm-12">

            <div class="form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>Login</h3>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-pencil"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    <form role="form" action="@Url.Action("index","home")" method="post" class="login-form">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(model => model.L_Username, new { @class = "form-control", @placeholder = "Username" })
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-key"></i>
                                </span>
                            </div>
                            @Html.PasswordFor(model => model.L_Password, new { @class = "form-control", @placeholder = "Password" })
                        </div>

                        <button type="submit" class="btn btn-lg btn-primary">Sign in!</button>
                    </form>
                    <hr data-content="or" class="hr-text" />
                    <div class="registertext">Register</div>
                    <form role="form" action="@Url.Action("register","home")" method="post" class="registration-form">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-group"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(model => model.R_Organisation_Name, new { @class = "form-control", @placeholder = "Organization Name" })
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(model => model.R_User_Name, new { @class = "form-control", @placeholder = "First & Last Name" })
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(model => model.R_Email, new { @class = "form-control", @placeholder = "Email" })
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-key"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(model => model.R_Passsword, new { @class = "form-control", @placeholder = "Password" })
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-mobile"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(model => model.R_Mobile, new { @class = "form-control", @placeholder = "Mobile" })
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary">Sign me up!</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        var alert_text = '@ViewBag.alert';
        if (alert_text != '') {
            alert(alert_text);
        }
    });
</script>